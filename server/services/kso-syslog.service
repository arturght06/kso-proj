[Unit]
Description=KSO Syslog TCP Listener
After=network.target postgresql.service

[Service]
User=kso-web
Group=www-data
WorkingDirectory=/opt/kso-proj/server
Environment="PATH=/opt/kso-proj/.venv/bin"

ExecStart=/opt/kso-proj/.venv/bin/python syslog_listener.py
Restart=always

[Install]
WantedBy=multi-user.target